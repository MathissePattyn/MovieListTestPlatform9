@model List<MovieListTestPlatform9.Domains.Entities.Movie>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Mijn films</h1>

@if (!Model.Any())
{
    <p>Je hebt nog geen films toegevoegd</p>
} else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Poster</th>
                <th>Titel</th>
                <th>Jaar</th>
                <th>Acteurs</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><img = src="@movie.PosterUrl" alt="@movie.Title" width="100" /></td>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Actors</td>
                    <td>
                        <form asp-action="Remove" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@movie.Id" />
                            <input type="hidden" name="returnUrl" value="@Url.Action("Index")" />
                            <button type="submit">Verwijderen</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    
}